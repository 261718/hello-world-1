@Library('pipeline-library@master') _

list = ["app1", "app2", "app3"]

pipeline {
    agent any
    tools {
        maven 'maven-3.6.3' 
    }
    stages {
        stage ('Generate package for app') {
            steps {
                script {
                    env.FOLDER_NAME = checkFileChanges(list)
                    println(env.FOLDER_NAME)
                    dir (env.FOLDER_NAME) {
                        sh 'mvn clean package'
                    }
                }
            }
        }
    }
} 
